<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.crankworks.crankanonymous"
      android:versionCode="0"
      android:versionName="0.0.0">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application android:label="@string/app_name" android:icon="@drawable/ic_crankworks"
                 android:allowBackup="true">

        <activity android:name="MainActivity"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Holo.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="TrackingActivity"
                  android:label="@string/tracking_name"
                  android:theme="@android:style/Theme.Holo.Light"
                  android:parentActivityName="com.crankworks.crankanonymous.MainActivity">
                  <meta-data
                      android:name="android.support.PARENT_ACTIVITY"
                      android:value="com.crankworks.crankanonymous.MainActivity" />
        </activity>

    </application>
</manifest>
