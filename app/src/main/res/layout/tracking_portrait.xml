<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <fragment
        android:id="@+id/tracking_buttons_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="com.crankworks.crankanonymous.activities.TrackingButtonsFragment"
        tools:layout="@layout/tracking_buttons_portrait_fragment" />

    <fragment
        android:id="@+id/tracking_details_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.crankworks.crankanonymous.activities.TrackingDetailsFragment"
        tools:layout="@layout/tracking_details_fragment"/>
    
</LinearLayout>